{
  "name": "flynas",
  "version": "1.0.0",
  "description": "Cross-platform personal cloud server application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "build:desktop:linux": "cd desktop/linux && npm run build",
    "build:desktop:windows": "cd desktop/windows && npm run build",
    "build:extension:chrome": "cd browser-extension/chrome && npm run build",
    "build:extension:firefox": "cd browser-extension/firefox && npm run build",
    "build:android": "cd android && ./gradlew assembleDebug",
    "dev:desktop:linux": "cd desktop/linux && npm run dev",
    "dev:desktop:windows": "cd desktop/windows && npm run dev",
    "dev:api": "cd api && npm run dev",
    "install:all": "npm install && cd desktop/linux && npm install && cd ../windows && npm install && cd ../../browser-extension/chrome && npm install && cd ../firefox && npm install && cd ../../api && npm install"
  },
  "keywords": [
    "cloud-storage",
    "personal-cloud",
    "file-sharing",
    "cross-platform",
    "remote-access"
  ],
  "author": "Flynas Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "node-forge": "^1.3.1"
  },
  "workspaces": [
    "shared/*",
    "api",
    "desktop/*",
    "browser-extension/*"
  ]
}