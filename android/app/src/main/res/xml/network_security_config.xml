<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        
        <!-- Local network for testing on real device -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.0.2</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        
        <!-- Add your local IP range here if needed -->
        <!-- <domain includeSubdomains="true">YOUR_LOCAL_IP</domain> -->
    </domain-config>
    
    <!-- For production, use HTTPS only -->
    <!-- 
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    -->
</network-security-config>
