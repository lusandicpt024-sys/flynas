{
  "name": "flynas-desktop-linux",
  "version": "1.0.0",
  "description": "Flynas Desktop Application for Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest"
  },
  "build": {
    "appId": "com.flynas.desktop.linux",
    "productName": "Flynas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "ui/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0"
  }
}
