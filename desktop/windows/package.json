{
  "name": "flynas-desktop-windows",
  "version": "1.0.0",
  "description": "Flynas Desktop Application for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest"
  },
  "build": {
    "appId": "com.flynas.desktop.windows",
    "productName": "Flynas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "ui/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../../assets/icons/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0"
  }
}