{
  "manifest_version": 3,
  "name": "Flynas - Personal Cloud Server",
  "version": "1.0.0",
  "description": "Access your personal cloud files from anywhere with drag-and-drop support",
  
  "icons": {
    "16": "../../assets/icons/icon16.png",
    "32": "../../assets/icons/icon32.png",
    "48": "../../assets/icons/icon48.png",
    "128": "../../assets/icons/icon128.png"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*",
    "*://*.flynas.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dragDrop.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flynas Personal Cloud",
    "default_icon": {
      "16": "../../assets/icons/icon16.png",
      "32": "../../assets/icons/icon32.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Flynas sidebar"
    },
    "quick-upload": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Quick file upload"
    }
  }
}